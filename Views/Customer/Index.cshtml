@using ProductCustomer.Models;

@model IEnumerable<Customer>

<div class="container">
    <h4 class="text-success">Cutomer List</h4>
</div>

<table id="myTable" class="display">
    <thead>
        <tr>
            <th> FulllName</th>
            <th>phone</th>
            <th>address</th>
        </tr>
    </thead>
   <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Mobile</td>
            <td>@item.address</td>
        </tr>
    }
</tbody>
</table>



<div class="container-fluid">
    <div class="row">
        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {

        <div class="col-md-12" style="background-color: #f8f9fa; padding: 10px;">


            <button class="btn btn-primary" asp-controller="Customer" asp-action="create">Add new customer</button>
        </div>
        }
    </div>
</div>
<link href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet" />


@section scripts{


    <script  type="text/javascript" src=//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js></script>


    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({

                "searching": true,
            });
        });</script>
}